<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clGreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bookingbox"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblNoti"
            android:text="Successful"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblContent"
            android:text="Your order is being processed by the store. We will update the order status shortly. Thank you."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnBackToHomepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawbtnbacktohomepage"
                android:paddingLeft="28dp"
                android:paddingTop="1dp"
                android:paddingRight="28dp"
                android:paddingBottom="1dp"
                android:text="Homepage"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>