<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logologin"
            />
        <androidx.appcompat.widget.Toolbar
            android:background="#4CAF50"
            android:id="@+id/toolbargiohang"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home"
                android:foreground="@drawable/iconcustom"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_menu"
                android:foreground="@drawable/iconcustom"
                />
            <LinearLayout
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/imgLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user2"
                    android:layout_marginRight="8dp"
                    android:foreground="@drawable/iconcustom" />
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_category"
                    android:layout_marginRight="8dp"
                    android:foreground="@drawable/iconcustom" />
                />
                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_search"
                    android:foreground="@drawable/iconcustom" />
                />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐẶT HOA ONLINE - GIAO HÀNG THẦN TỐC"
                android:textColor="#E91E63"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gọi ngay 19008585"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="Giỏ hàng"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="135dp"
                android:layout_height="130dp"
                android:src="@drawable/logo"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView

                    android:gravity="center"
                    android:id="@+id/txtNameProduct"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:text="Hoa hồng đà lạt"/>
                <TextView
                    android:id="@+id/txtPriceProduct"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17dp"
                    android:textColor="#DA1111"
                    android:text="100.000đ"
                    android:layout_marginBottom="10dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ImgDecrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_decrease"
                        />
                    <TextView
                        android:id="@+id/txtAmount"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:text="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <ImageView
                        android:id="@+id/ImgAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:layout_marginRight="20dp"
                        />
                    <Button
                        android:id="@+id/btnOrder"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btncustom2"
                        android:text="ĐẶT HÀNG"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:backgroundTint="@null" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>