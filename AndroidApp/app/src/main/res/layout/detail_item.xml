<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Chi tiết sản phẩm"
        android:layout_width="match_parent"
        android:background="#009688"
        android:layout_height="?attr/actionBarSize">
        <FrameLayout
            android:layout_marginRight="10sp"
            android:layout_gravity="right"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/notificationBadge"
                android:layout_gravity="top|right"
                android:layout_width="28dp"
                android:background="#E80707"
                android:layout_height="28dp" />
            <ImageView
                android:id="@+id/imgCart"
                android:layout_marginTop="15dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_cart" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flower1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            />
                        <TextView
                            android:id="@+id/txtRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#FFCC00"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:id="@+id/txtSaleAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(100 lượt bán)"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100.000Đ"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnAddToCartDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm vào giỏ"
                    android:textColor="#459f48"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:background="@drawable/custom_button_2"
                    android:layout_margin="10dp"
                    app:backgroundTint="@null"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/imgRate1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_rate"
                    />
                <ImageView
                    android:id="@+id/imgRate2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_rate"
                    />
                <ImageView
                    android:id="@+id/imgRate3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_rate"
                    />
                <ImageView
                    android:id="@+id/imgRate4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_rate"
                    />
                <ImageView
                    android:id="@+id/imgRate5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_rate"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Sản phẩm bao gồm:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Mô tả của sản phẩm"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ưu đãi của khách hàng"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#459f48"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#459f48"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="1"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            app:backgroundTint="@null"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tặng banner hoặc thiệp (trị giá 20.000đ - 50.000đ) miễn phí"
                            android:textSize="18dp"
                            android:lineHeight="25dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="2"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            app:backgroundTint="@null"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Miễn phí giao khu vực nội thành "
                            android:textSize="18dp"
                            android:lineHeight="25dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="3"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            app:backgroundTint="@null"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cam kết 100% hoàn lại tiền nếu Bạn không hài lòng"
                            android:textSize="18dp"
                            android:lineHeight="25dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="4"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            app:backgroundTint="@null"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cam kết hoa tươi trên 3 ngày"
                            android:textSize="18dp"
                            android:lineHeight="25dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>